<div class="container" style="display: flex; flex-direction: column; justify-content: center; align-items: center; padding: 50px;">
  <h1>Here are our drinks</h1>
  <%= link_to "Create a new drink", new_cocktail_path, class: "btn btn-primary" %>
</div>

  <ul class="list-unstyled">
    <% @cocktails.each do |cocktail| %>

      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-4">
             <div class="card"
               style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                      url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
               <div class="card-category"><%= cocktail.name %></div>
               <div class="card-description">
                 <p>
                  <% cocktail.ingredients.each do |ingredient| %>
                    <%= ingredient.name %>
                  <% end %>
                  </p>
               </div>
                <%= link_to cocktail.name, cocktail_path(cocktail), class: 'card-link'%>

               <p></p>

             </div>
            <!-- insert <div class="card"> -->
          </div>
        </div>
      </div>
    <% end %>
  </ul>

