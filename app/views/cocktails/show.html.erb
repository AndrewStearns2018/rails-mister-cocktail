<div class="container" style="display: flex; flex-direction: column; justify-content: center;">
  <h1><%= @cocktail.name%></h1>
  <%= cl_image_tag @cocktail.photo, :width=>300, :height=>300, :gravity=>"face", :radius=>"max", :crop=>"fill", :background=>"#F4F4F4" %>
  <ul class="list-unstyled">
    <% @cocktail.doses.each do |dose| %>
      <p><strong>Add:</strong></p>
      <li><em> <%=  dose.description%> of <%=dose.ingredient.name %></em></li>
  <li>Shake and serve<%= image_tag 'cocktail-shaker', style: "height: 50px;" %></li>
      <br>
  </ul>
      <span><i class="fas fa-trash-alt"></i><%= link_to cocktail_dose_path(@cocktail, dose),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this?" } do  %>
              <%= "Delete this dose" %>
      <% end %></span>
    <% end %>
</div>


<br>
<div class="container" style="position: absolute; right: 0; top: 400px;">
  <h3 class="text-center">Add a dose to this cocktail</h3>
  <div class="row">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <!--Needs [] when you have 2 arguements-->
      <div class="col-md-6 col-md-offset-3">
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <!-- association allows for a drop down list-->
        <%= f.button :submit %>
      </div>
    <% end %>
    <br>
    <div class="col-md-6 col-md-offset-3">
      <%= link_to "Back to list", cocktails_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>



