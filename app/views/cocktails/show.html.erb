<h1>Cocktail#show</h1>
<p>Find me in app/views/cocktail/show.html.erb</p>

<%= @cocktail.name %>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %></li>
    <li><%= dose.ingredient.name %></li>
    <%= link_to cocktail_dose_path(@cocktail, dose),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this?" } do  %>
            <%= "Delete this dose" %>
    <% end %>
  <% end %>
</ul>

<br>

<p>Add a dose to this cocktail</p>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <!--Needs [] when you have 2 arguements-->
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <!-- association allows for a drop down list-->
  <%= f.submit %>
<% end %>



<%= link_to "Back to list", cocktails_path %>

